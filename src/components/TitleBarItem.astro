---
interface Props {
    href: string;
}

const { href } = Astro.props;
---

<a href={href} class="link">
    <p class="title">
        <slot />
    </p>
</a>

<style lang="scss">
    .title {
        font-size: 24px;
        margin: 0 15px;
        font-weight: bold;
        color: var(--text-0);
        user-select: none;

        &:hover {
            color: var(--accent);
            cursor: pointer;
        }
    }
</style>
