---
import { AppSubmitButton } from "@origami-systems/ui";
import MainLayout from "../layouts/MainLayout.astro";
const { error } = Astro.props;
---

<MainLayout title="An Error Occurred">
    <h1>An Error Occurred</h1>
    <h2>{error.code}</h2>
    <p>
        Message: {error instanceof Error ? error.message : "Unknown error"}
    </p>

    <AppSubmitButton @click="handleError"> Back </AppSubmitButton>
</MainLayout>
