{
    "extends": "astro/tsconfigs/strict",
    "include": [
        ".astro/types.d.ts",
        "**/*"
    ],
    "exclude": [
        "dist",
        "nuxt"
    ],
    "compilerOptions": {
        // Needed for TypeScript intellisense in the template inside Vue files
        "jsx": "preserve",
        "verbatimModuleSyntax": true,
        "paths": {
            "~/*": [
                "./src/*"
            ],
            "@/*": [
                "./src/components/*"
            ],
            "@layouts/*": [
                "./src/layouts/*"
            ],
            "@utils/*": [
                "./src/utils/*"
            ]
        }
    }
}
